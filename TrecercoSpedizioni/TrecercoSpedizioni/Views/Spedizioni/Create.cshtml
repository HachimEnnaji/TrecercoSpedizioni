@model TrecercoSpedizioni.Models.Spedizioni

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Spedizioni</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.NomeCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataSpedizione" class="control-label"></label>
                <input asp-for="DataSpedizione" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" disabled />
                <span asp-validation-for="DataSpedizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CittaDestinazione" class="control-label"></label>
                <input asp-for="CittaDestinazione" class="form-control" />
                <span asp-validation-for="CittaDestinazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndirizzoDestinatario" class="control-label"></label>
                <input asp-for="IndirizzoDestinatario" class="form-control" />
                <span asp-validation-for="IndirizzoDestinatario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NominativoDestinatario" class="control-label"></label>
                <input asp-for="NominativoDestinatario" class="form-control" />
                <span asp-validation-for="NominativoDestinatario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostoSpedizione" class="control-label"></label>
                <input asp-for="CostoSpedizione" class="form-control" />
                <span asp-validation-for="CostoSpedizione" class="text-danger"></span>
            </div>
            @{
                var dataConsegnaPrevista = Model?.DataConsegnaPrevista ?? DateTime.Now;
            }
            <div class="form-group">
                <label asp-for="DataConsegnaPrevista" class="control-label"></label>
                <input asp-for="DataConsegnaPrevista" class="form-control" value="@dataConsegnaPrevista.AddDays(3).ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                <span asp-validation-for="DataConsegnaPrevista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


